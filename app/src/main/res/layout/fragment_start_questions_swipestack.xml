<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/com.rooksoto.parallel"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="#40000000"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp"
    >

    <TextView
        android:layout_width="128dp"
        android:layout_height="8dp"
        android:layout_gravity="bottom"

        android:background="@color/teal"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/textMain"
                android:text="Are you an IOS or Android developer?"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                >

                <ImageView
                    android:id="@+id/fragment_start_questions_swipestack_leftarrow"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/blackleftarrow"
                    android:layout_alignParentLeft="true"
                    android:tint="#f9f9f9"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/fragment_start_questions_swipestack_leftarrow"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="@color/textMain"
                        android:text="IOS"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/fragment_start_questions_swipestack_rightarrow"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/blackrightarrow"
                    android:layout_alignParentRight="true"
                    android:tint="#f9f9f9"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/fragment_start_questions_swipestack_rightarrow"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="@color/textMain"
                        android:text="Android"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>