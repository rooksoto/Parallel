<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:text="Please enter the event ID"
            android:gravity="center"
            android:textColor="@color/textAlt"
            android:layout_marginBottom="24dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fragment_start_enterid_eventid"
                android:layout_width="@dimen/activity_start_edittext_width"
                android:layout_height="@dimen/activity_start_edittext_height"
                android:hint="Event ID"
                android:gravity="center_vertical"
                android:textColor="@color/textMain"
                android:typeface="sans"
                android:singleLine="true"
                android:imeOptions="actionDone"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/enter_button"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:text="Enter"
            android:textColor="@color/textMain"
            android:background="#40000000"
            android:typeface="sans"
            />

    </LinearLayout>

</FrameLayout>